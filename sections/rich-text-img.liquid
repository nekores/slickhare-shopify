<style>
  h2.h3 {
    color: #d3a640;
    font-size: 68px;
    font-weight: 500;
    line-height: 84px;
}
  .rich-img {
    display: flex;
    justify-content: center;
    margin-bottom: 2rem;
}
  h2.h3 {
    font-size: 5rem;
}
  .rich-text__text--large p {
    font-size: 1.5rem;
    font-weight: 500;
    color: #d3a640;
}
  .page-width.rich-text {
    margin-top: 2rem;
    margin-bottom: 2rem;
}
  div#shopify-section-rich-text-img {
    border-top: 1px solid;
}
  @media only screen and (max-width: 768px){
  h2.h3 {
    font-size: 2rem;
    line-height: 3.2rem;
  }
  .rich-text__text--large p {
    font-size: 1rem;
    font-weight: 500;
    color: #d3a640;
}
  }
</style>


<div class="page-width rich-text">
  <div class="grid">
    <div class="grid-img">
      <div class="rich-img"> <img src="{{section.settings.image |img_url: 'master'}}"></div>
    <div class="grid__item {% unless section.settings.full_width %} medium-up--two-thirds medium-up--push-one-sixth{% endunless %}">
      {% if section.settings.section_title != blank %}
        <div class="rich-text__heading--{{ section.settings.text_size }} text-center">
          <h2 class="h3">{{ section.settings.section_title | escape }}</h2>
        </div>
      {% endif %}
      {% if section.settings.text != blank %}
        <div class="rich-text__text--{{ section.settings.text_size }} rte-setting text-center">{{ section.settings.text }}</div>
      {% endif %}
    </div>
    </div>
  </div>
</div>



