<div class="instagram-posts-grid-section{% if section.settings.mode == 'dark' %} dark{% endif %}{% if section.settings.mode == 'light' %} light{% endif %}">
  {% if section.settings.title != blank %}
    <h2 class="instagram-posts-grid-title">{{ section.settings.title }}</h2>
  {% endif %}
  <div id="insta-feed"></div>
</div>

<style>
.instagram-posts-grid-section {
  padding: 40px 16px 32px 16px;
  background: #fff;
  box-shadow: 0 2px 16px rgba(0,0,0,0.04);
  text-align: center;
  color: #181818;
}
.instagram-posts-grid-section.light {
  background: #fff;
}
.instagram-posts-grid-section.dark {
  background: #181818;
  color: #D3A640;
}
.instagram-posts-grid-title {
  font-size: 2rem;
  font-weight: 700;
  margin-bottom: 32px;
  letter-spacing: 1px;
  color: #181818;
}
.instagram-posts-grid-section.dark .instagram-posts-grid-title {
  color: #D3A640;
}
.instagram-posts-grid-section.light .instagram-posts-grid-title {
  color: #181818;
}

/* Instagram Feed Responsive Grid */
#insta-feed,
.instafeed-new-layout-wrapper {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 8px;
  max-width: 1200px;
  margin: 0 auto;
}

#insta-feed a,
.instafeed-new-layout-wrapper a {
  aspect-ratio: 1;
  overflow: hidden;
  border-radius: 8px;
  transition: transform 0.3s ease;
}

#insta-feed a:hover,
.instafeed-new-layout-wrapper a:hover {
  transform: scale(1.05);
}

#insta-feed img,
.instafeed-new-layout-wrapper img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* Responsive Breakpoints */
@media (max-width: 767px) {
  .instagram-posts-grid-section {
    padding: 30px 12px 24px 12px;
  }
  
  .instagram-posts-grid-title {
    font-size: 1.5rem;
    margin-bottom: 24px;
  }
  
  #insta-feed,
  .instafeed-new-layout-wrapper {
    grid-template-columns: repeat(1, 1fr) !important;
    gap: 8px !important;
    max-width: 400px !important;
    display: grid !important;
  }
  
  #insta-feed > *,
  .instafeed-new-layout-wrapper > * {
    width: 100% !important;
    max-width: 400px !important;
  }
  .instafeed-new-layout-wrapper > *{
    height: 300px !important;
  }
}
</style>

{% schema %}
{
  "name": "Instagram Posts Grid",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Our Instagram Posts"
    },
    {
      "type": "select",
      "id": "mode",
      "label": "Color Mode",
      "options": [
        { "value": "light", "label": "Light" },
        { "value": "dark", "label": "Dark" }
      ],
      "default": "light"
    }
  ],
  "presets": [
    {
      "name": "Instagram Posts Grid"
    }
  ]
}
{% endschema %} 