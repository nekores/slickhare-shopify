      "max":0.90,
      "step":0.10,
      "label": "Overlay Opacity",
      "default":0.10
      },
      {
        "type": "image_picker",
        "id": "sectionImage1",
        "label": "Select Background Image"
   
      },
     {
        "type": "checkbox",
        "id": "boxShadows",
        "label":"Box Shadow"
   
      }
    
  ],
  "presets": [
    {
      "name": {
       
        "en": "Homepage Header V2"
      
      },
      "category": {
       
        "en": "Homepage"
       
      }
    }
  ]
}
