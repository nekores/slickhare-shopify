{% if section.blocks.size > 0 %}

<section class="offer-img-txt">
   {% for block in section.blocks %}
  {%- if block.settings.image != blank-%}

  <div class="banner_img">
    <img src="{{block.settings.image |img_url: 'medium'}}">
  </div>
  {%- endif -%}
   {%- if block.settings.heading != blank-%}
    <div class="container">
  <div class="head_content">
    <h2 class="head">{{block.settings.heading}}</h2>
    <div class="head_h2">
    <h3>{{block.settings.discription}}</h3>
    </div>
  </div>
  </div>
  {%- endif -%}
  <div class="buy-button">

		<div class="offer-btn">
        <a href="{{ block.settings.button_link }}"
          class="btn">
          {{- block.settings.button_label | escape -}}
        </a>
      </div>
     
  </div>
  {% endfor %}
  
</section>

 {%- endif -%}



{% schema %}
  {
    "name": "Callout Variant 2",
    "class":"callout_variant_1_section",
    "settings": [],
	"max_blocks": 5,
  "blocks": [
	{
	  "type": "image",
      "name": "Image slide",
      "settings": [
	{
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
	{
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
	{
      "type": "text",
      "id": "discription",
      "label": "Discription"
    },
	{
      "type": "text",
      "id": "button_label",
      "label": "button_labal"
    },
	{
      "type": "url",
      "id": "button_link",
      "label": "button_link"
    }
	]
  	}],

"presets": [
    {
      "category": "Image",
      "name": "Callout Variant 2",
      "settings": {}
    }
  ]
}
{% endschema %}

