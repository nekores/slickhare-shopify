<script>
 document.addEventListener("DOMContentLoaded", (event) => {

  $('.MainProductWrapper').slick({
   prevArrow:"<button type='button' class='slick-prev'>{% render 'icon-chevron-left' %}</button>",
  nextArrow:"<button type='button' class='slick-next'>{% render 'icon-chevron-right' %}</button>",
