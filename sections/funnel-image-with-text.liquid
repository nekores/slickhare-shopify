<style>
  .main-funnel-image-with-text {
    background: #fff;
    padding-top: 80px;
    padding-left: 80px;
    padding-right: 80px;
    padding-bottom: 80px;
}
  .main-funnel-image-with-text .container{
    max-width:1920px;
    margin:0px auto;
  }

.main-funnel-image-with-text .row {
    display: flex;
    width: 100%;
    align-items: center;
}
  .col-lg-6{
    width:50%;
  }
  .main-funnel-image-with-text .main_content_wrapper{
    max-width:713px;
  }
  .main-funnel-image-with-text .main_content_wrapper .heading h1{
    font-family:"Oswald", sans-serif;
     font-size:48px;
     font-weight:700;
     line-height:71.14px;
     color:#110000;
  }
  .main-funnel-image-with-text .main_content_wrapper .description p{
     font-family:"Oswald", sans-serif;
     font-size:26px;
     line-height:38.53px;
     color:#000000CC;
     letter-spacing:0.5px;
  }
     .main-funnel-image-with-text .button_wrapper {
    padding-top: 30px;
}
   .main-funnel-image-with-text .button_wrapper a {
    padding: 15.5px 40px 15.5px 40px;
    background-color: #D3A640;
    font-family: "Oswald", sans-serif;
    font-size: 18px;
    line-height: 28px;
    color: #fff;
    cursor: pointer;
}
  
  @media only screen and (max-width:1300px) {
   .main-funnel-image-with-text .main_content_wrapper .heading h1{
     font-size:36px;
     line-height:46px;
   }
      .main-funnel-image-with-text .main_content_wrapper .description p{
        font-size:18px;
        line-height:normal;
      }
    .main-funnel-image-with-text{
      padding:50px;
    }
    .main-funnel-image-with-text .featured_image_wrapper img {
    max-width: 80%;
}

}

    @media only screen and (max-width:992px) {
     .main-funnel-image-with-text .main_content_wrapper .heading h1{
          font-size: 24px;
          line-height: normal;
      }
      .main-funnel-image-with-text .main_content_wrapper .description p{
        font-size:18px;
        line-height:normal;
      }
      .main-funnel-image-with-text .button_wrapper a{
        padding: 10px 20px;
        font-size: 16px;
        line-height: normal;
      }
    }
      @media only screen and (max-width:768px) {
     .main-funnel-image-with-text{
         padding:20px;
      }

    }

        @media only screen and (max-width:492px) {
          .main-funnel-image-with-text .row .col-sm-12{
              width:100%;
         }
         .main-funnel-image-with-text .row{
               flex-direction:column;
         }
        .main_hero_container {
          padding-top: 50px;
          padding-bottom: 30px;
          }
        .featured_image_wrapper {
          display: flex;
          justify-content: center;
        }
      }
</style>
<div class="main-funnel-image-with-text">
   <div class="container">
     <div class="row">
      <div class="col-lg-6 col-md-6 col-sm-12">
        {% if section.settings.image !=blank %}
          <div class="featured_image_wrapper">
             <img src="{{ section.settings.image |img_url:'master' }}"/>
          </div>
          {% endif %}
       </div>
        <div class="col-lg-6 col-md-6 col-sm-12">
           <div class="main_content_wrapper">
             {%  if section.settings.heading !=blank %}
              <div class="heading">
                 <h1>{{ section.settings.heading }}</h1>
              </div>
            {% endif %}
            {% if section.settings.content !=blank %}
              <div class="description">
                {{ section.settings.content }}
              </div>
            {% endif %}
            {% if section.settings.button_label !=blank %}
              <div class="button_wrapper">
                  <a href="{{ section.settings.button_link }}">{{ section.settings.button_label }}</a>
              </div>
            {% endif %}
           </div>
       </div>

     </div>

   </div>
</div>

{% schema %}
  {
    "name": "Funnel Image With Text",
    "class":"funnel-image-with-text",
    "settings": [
      {
        "type":"header",
        "content":"Featured Image"
      },
      {
        "type":"image_picker",
        "id":"image",
        "label":"Featured Image"
      },
      {
        "type":"header",
        "content":"Content"
      },
       {
        "type":"text",
        "id":"heading",
        "label":"Heading"
      },
       {
        "type":"richtext",
        "id":"content",
        "label":"Content"
      },
      {
        "type":"text",
        "id":"button_label",
        "label":"Button Label"
      },
       {
        "type":"url",
        "id":"button_link",
        "label":"Button Link"
      }
    ],
    "presets": [
      {
        "name":"Funnel Image With Text"
      }
    ]
  }
{% endschema %}