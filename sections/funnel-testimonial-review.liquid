<style>
  .main-funnel-testimonial-review {
    background:#F9F6EF;;
    padding-top: 80px;
    padding-left: 80px;
    padding-right: 80px;
    padding-bottom: 80px;
}
  .main-funnel-testimonial-review .container{
    max-width:1920px;
    margin:0px auto;
  }

.main-funnel-testimonial-review .row {
    display: flex;
    width: 100%;
    align-items:center;
    gap:26px;
}
.col-lg-4 {
    max-width: 33.33%;
}
.main-funnel-testimonial-review .section_heading h4{
   color: #100;
  text-align: center;
  font-family: "Oswald", sans-serif;
  font-size: 48px;
  font-style: normal;
  font-weight: 700;
  line-height: normal;
  letter-spacing: 0.5px;
  text-transform: capitalize;
  margin-bottom:78px;
}
 .testimonial_card_wrapper{
   padding: 26px;
   border: 1px solid #FFFCF5;
   background: #FFF;
 }
  .testimonial_media{
     display: flex;
     gap:10px;
  }
  .testimonial_media_item {
   max-width:140px;
}
  .author_name h4{
    color: #000;
    font-family: Inter;
    font-size: 14px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
  }
    .testimonial_content{
      margin-top:18px;
      margin-bottom:18px;
    }
  .testimonial_content p{
    overflow: hidden;
    color: rgba(0, 0, 0, 0.70);
    text-overflow: ellipsis;
    font-family: "Oswald", sans-serif;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 27px; /* 168.75% */
    color:#000;
  }
    /* the slides */
  .main-funnel-testimonial-review .slick-slide{
      margin: 0 26px;
  }

  /* the parent */
  .main-funnel-testimonial-review .slick-list {
      margin: 0 -26px;
  }
  .testimonial_slider_wrapper {
    width: 100%;
}

       @media only screen and (max-width:1300px) {
  .main-funnel-testimonial-review .section_heading h4{
     font-size:36px;
     line-height:46px;
    margin-botto:50px;
   }
  
      .main-funnel-testimonial-review{
        padding:50px;
      }
      

}

  
          @media only screen and (max-width:768px) {
       .main-funnel-testimonial-review .section_heading h4{
          font-size: 32px;
          line-height: normal;
          margin-bottom:30px;
      }
     .main-funnel-testimonial-review{
         padding:20px;
      }

    }
</style>
<div class="main-funnel-testimonial-review">
   <div class="container">

     {% if section.settings.heading !=blank %}
        <div class="section_heading">
           <h4>{{ section.settings.heading }}</h4>
        </div>
     {% endif %}
     <div class="testimonial_slider_wrapper">

       <div class="testimonial_slider">
       {% for block in section.blocks %}
      
           <div class="testimonial_card_wrapper">
               <div class="testimonial_details">
                  <div class="testimonial_rating">
                    {% render "rating" %}
                  </div>
                 {% if block.settings.heading !=blank %}
                  <div class="author_name">
                     <h4>{{ block.settings.heading }}</h4>
                  </div>
                  {% endif %}
                  <div class="payment_verfied_badge">
                     {% render "verify_badge" %}
                  </div>
               </div>
              <div class="testimonial_content">
                {% if block.settings.content !=blank %}
                  {{ block.settings.content  }}
                {% endif %}
              </div>
              <div class="testimonial_media">
                {% if block.settings.before_image !=blank %}
                 <div class="testimonial_media_item">
                    <img src="{{ block.settings.before_image  |img_url:'master'}}"/>
                 </div>
                {% endif %}
                {% if block.settings.after_image !=blank %}
                  <div class="testimonial_media_item">
                    <img src="{{ block.settings.after_image  |img_url:'master'  }}"/>
                 </div>
                  {% endif %}
              </div>
           </div>

         {% endfor %}
   </div>

   

     </div>

     

   </div>
</div>
<script>
  $('.testimonial_slider').slick({
  dots: false,
    
  infinite: false,
  speed: 300,
  slidesToShow: 3,
  slidesToScroll: 3,
  responsive: [
     {
      breakpoint: 1300,
      settings: {
        slidesToShow: 2,
        slidesToScroll: 2,
        infinite: true,
        dots: true
      }
    },
    {
      breakpoint: 992,
      settings: {
        slidesToShow: 2,
        slidesToScroll: 2,
        infinite: true,
        dots: true
      }
    },
    {
      breakpoint: 768,
      settings: {
        slidesToShow: 2,
        slidesToScroll: 2
      }
    },
    {
      breakpoint: 592,
      settings: {
        slidesToShow: 1,
        slidesToScroll: 1
      }
    }
    // You can unslick at a given breakpoint now by adding:
    // settings: "unslick"
    // instead of a settings object
  ]
});
</script>
{% schema %}
  {
    "name": "Funnel Testiomonial",
    "class":"funnel-testimonial-review",
    "settings": [
     {
       "type":"text",
       "id":"heading",
       "label":"Section Heading",
       "default":"Real Men, Real Results: See What Others Are Saying"
     }
    ],
      "blocks":[
      {
        "type":"testimonial",
        "name":"Testimonials",
        "settings":[
          {
            "type":"text",
            "id":"heading",
            "label":"Author Name"
          },
          {
            "type":"richtext",
            "id":"content",
            "label":"Testimonial Content"
          },
          {
            "type":"image_picker",
            "id":"before_image",
            "label":"Testimonial Before Image"
          },
         {
            "type":"image_picker",
            "id":"after_image",
            "label":"Testimonial After Image"
          },
          

        ]
      }
    ],
    "presets": [
      {
        "name":"Funnel Testiomonial"
      }
    ]
  }
{% endschema %}