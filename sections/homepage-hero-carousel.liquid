<style>
.luxury-hero-carousel {
  {% if section.settings.colorID != blank %}
    background-color: {{ section.settings.colorID }};
  {% endif %}
  padding-bottom: 0;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  position: relative;
  z-index: 1;
  overflow: hidden;
  height: calc(100vh - 150px);
  align-items: center;
  display: flex !important;
  justify-content: center;
}

.luxury-hero-carousel .swiper-slide::before {
  content: "";
  width: 100%;
  background-color: var(--overlayColor);
  height: 100%;
  position: absolute;
  padding-top: 0;
  z-index: -1;
  opacity: var(--overlayOpacity);
}

.luxury-hero-carousel .swiper-slide {
  position: relative;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

.luxury-hero-carousel .swiper-slide img {
  position: absolute;
  z-index: -9;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.luxury-hero-content {
  display: flex;
  justify-content: space-around;
  margin: 0 auto;
  padding: 50px 20px;
  align-items: center;
  height: 100%;
  max-width: 1400px;
  width: 100%;
}

.luxury-hero-text-section {
  flex-basis: 80%;
  z-index: 0;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  padding-left: 100px;
}

.luxury-hero-logo {
  margin-bottom: 30px;
  opacity: 0;
  transform: translateY(-30px);
  transition: opacity 1s ease, transform 1s ease;
}

.luxury-hero-logo img {
  height: 60px;
  width: auto;
  filter: drop-shadow(0 4px 8px rgba(0,0,0,0.2));
}

.luxury-hero-heading {
  max-width: 47rem;
  text-align: center;
  line-height: 1.2;
  font-size: 3.5rem;
  letter-spacing: -0.02em;
  margin-bottom: 30px;
  color: #fff;
  font-weight: 800;
  opacity: 0;
  transform: translateX(-100px);
  transition: opacity 1s ease, transform 1s ease;
  text-shadow: 0 4px 8px rgba(0,0,0,0.3);
}

.luxury-hero-subheading {
  max-width: 40rem;
  line-height: 1.6;
  font-size: 1.25rem;
  letter-spacing: 0.02em;
  text-align: left;
  color: #fff;
  font-weight: 400;
  margin-bottom: 40px;
  opacity: 0;
  transform: translateX(100px);
  transition: opacity 1s ease, transform 1s ease;
  text-shadow: 0 2px 4px rgba(0,0,0,0.3);
}

.luxury-hero-button-wrapper {
  margin-top: 30px;
  position: relative;
  opacity: 0;
  transform: translateY(30px);
  transition: opacity 1s ease, transform 1s ease;
}

.luxury-hero-button {
  background: {{ section.settings.button_bg }};
  color: {{ section.settings.button_color }};
  padding: 18px 40px;
  font-size: 1.1rem;
  font-weight: 700;
  line-height: 1.4;
  letter-spacing: 0.02em;
  text-decoration: none;
  border-radius: 50px;
  transition: all 0.3s ease;
  box-shadow: 0 8px 25px rgba(0,0,0,0.2);
  position: relative;
  overflow: hidden;
  display: inline-flex;
  align-items: center;
  gap: 12px;
}

.luxury-hero-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: left 0.5s ease;
}

.luxury-hero-button:hover::before {
  left: 100%;
}

.luxury-hero-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 12px 35px rgba(0,0,0,0.3);
  color: {{ section.settings.button_color }};
  text-decoration: none;
}

/* Active slide animations */
.luxury-hero-carousel .swiper-slide-active .luxury-hero-logo,
.luxury-hero-carousel .swiper-slide-active .luxury-hero-heading,
.luxury-hero-carousel .swiper-slide-active .luxury-hero-subheading,
.luxury-hero-carousel .swiper-slide-active .luxury-hero-button-wrapper {
  opacity: 1;
  transform: translateX(0) translateY(0);
}

/* Navigation arrows */
.luxury-hero-navigation {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 999;
}

.luxury-nav-button {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 50px;
  height: 50px;
  background: rgba(255,255,255,0.1);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255,255,255,0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
  pointer-events: auto;
}

.luxury-nav-button.button-prev {
  left: 40px;
  background-color: rgb(29, 29, 29);
}

.luxury-nav-button.button-next {
  right: 40px;
  background-color: rgb(29, 29, 29);
}

.luxury-nav-button {
  width: 50px;
  height: 50px;
  background: rgba(255,255,255,0.1);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255,255,255,0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
}

.luxury-nav-button:hover {
  background: rgba(255,255,255,0.2);
  transform: scale(1.1);
}

.luxury-nav-button svg {
  width: 24px;
  height: 24px;
  color: #ffffff;
  transition: all 0.3s ease;
}

.luxury-nav-button:hover svg {
  transform: scale(1.2);
  color: #ffffff;
}

/* Swiper container */
.luxury-hero-carousel .swiper {
  width: 100%;
  height: 100%;
}

.luxury-hero-carousel .swiper-wrapper {
  height: 100%;
}

/* Responsive Design */
@media only screen and (max-width: 1024px) {
  .luxury-hero-heading {
    font-size: 3rem;
    line-height: 1.1;
  }
  
  .luxury-hero-subheading {
    font-size: 1.1rem;
  }
  
  .luxury-hero-text-section {
    padding-left: 60px;
  }
}

@media only screen and (max-width: 768px) {
  .luxury-hero-carousel {
    height: calc(100vh - 100px);
  }
  
  .luxury-hero-content {
    flex-direction: column;
    padding: 40px 20px;
    text-align: center;
  }
  
  .luxury-hero-text-section {
    padding-left: 0;
    align-items: center;
    text-align: center;
  }
  
  .luxury-hero-heading {
    font-size: 2.5rem;
    text-align: center;
    line-height: 1.2;
    margin-bottom: 20px;
  }
  
  .luxury-hero-subheading {
    font-size: 1rem;
    text-align: center;
    line-height: 1.5;
    margin-bottom: 30px;
  }
  
  .luxury-hero-logo {
    margin-bottom: 20px;
  }
  
  .luxury-hero-logo img {
    height: 50px;
  }
  
  .luxury-hero-button {
    padding: 16px 32px;
    font-size: 1rem;
  }
  
  .luxury-nav-button.button-prev {
    left: 20px;
  }
  
  .luxury-nav-button.button-next {
    right: 20px;
  }
  
  .luxury-nav-button {
    width: 45px;
    height: 45px;
  }
  
  .luxury-nav-button svg {
    width: 20px;
    height: 20px;
  }
}

@media only screen and (max-width: 480px) {
  .luxury-hero-carousel {
    height: calc(100vh - 80px);
  }
  
  .luxury-hero-heading {
    font-size: 2rem;
    line-height: 1.2;
  }
  
  .luxury-hero-subheading {
    font-size: 0.95rem;
  }
  
  .luxury-hero-button {
    padding: 14px 28px;
    font-size: 0.95rem;
  }
  

  
  .luxury-nav-button {
    width: 40px;
    height: 40px;
  }
  
  .luxury-nav-button svg {
    width: 18px;
    height: 18px;
  }
}

/* Animation for page load */
.luxury-hero-carousel {
  opacity: 0;
  animation: fadeIn 1s ease forwards;
}

@keyframes fadeIn {
  to {
    opacity: 1;
  }
}
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">
<link rel="preload" as="image" href="{{section.settings.sectionImage1 | img_url:'master'}}">

<div class="luxury-hero-carousel">
  <div class="swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide" style="--overlayColor:{{ block.settings.overlay }}; --overlayOpacity:{{ block.settings.overlayOpacity }};">
          {% if block.settings.sectionImage1 != blank %}
            <img
              fetchpriority="High"
              src="{{block.settings.sectionImage1 | img_url:'master'}}"
              alt="{{ block.settings.sectionHeading | default: 'Hero background image' }}"
            >
          {% endif %}
          <div class="luxury-hero-content">
            <div class="luxury-hero-text-section" style="align-items: {{ block.settings.content_position }};">
              <div class="luxury-hero-logo">
                {% if block.settings.sectionImage != blank %}
                  <img
                    src="{{ block.settings.sectionImage | img_url:'master' }}"
                    alt="{{ block.settings.sectionHeading | default: 'Hero section logo' }}"
                  >
                {% endif %}
              </div>
              {% if block.settings.sectionHeading != blank %}
                <h1 class="luxury-hero-heading">
                  {{ block.settings.sectionHeading }}
                </h1>
              {% endif %}
              {% if block.settings.sectionSubHeading != blank %}
                <p class="luxury-hero-subheading">
                  {{ block.settings.sectionSubHeading }}
                </p>
              {% endif %}
              {% if block.settings.btntitle != blank %}
                <div class="luxury-hero-button-wrapper">
                  <a href="{{ block.settings.btnUrl}}" class="luxury-hero-button">
                    {{ block.settings.btntitle }}
                  </a>
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    
    {% if section.blocks.size > 1 %}
      <div class="luxury-hero-navigation">
        <div class="luxury-nav-button button-prev">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <div class="luxury-nav-button button-next">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
      </div>
    {% endif %}
  </div>
</div>

<script defer src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<script>
document.addEventListener('DOMContentLoaded', function () {
  const swiperContainer = document.querySelector('.luxury-hero-carousel .swiper');
  const slideCount = swiperContainer.querySelectorAll('.swiper-slide').length;
  
  if (slideCount > 1) {
    const swiper = new Swiper('.luxury-hero-carousel .swiper', {
      direction: 'horizontal',
      loop: true,
      autoplay: {
        delay: 5000,
        disableOnInteraction: false,
      },
      effect: 'fade',
      fadeEffect: {
        crossFade: true
      },
      navigation: {
        nextEl: '.button-next',
        prevEl: '.button-prev',
      },
      speed: 1000,
    });
  }
});
</script>

