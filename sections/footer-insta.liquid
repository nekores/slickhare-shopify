<style>
.luxury-footer {
  background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
  color: #ffffff;
  position: relative;
  overflow: hidden;
}

.luxury-footer::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, rgba(255,255,255,0.05) 0%, rgba(255,255,255,0.02) 100%);
  pointer-events: none;
}

.luxury-footer-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 80px 20px 40px 20px;
  position: relative;
  z-index: 2;
}

.luxury-footer-content {
  display: grid;
  grid-template-columns: 1fr auto;
  gap: 60px;
  align-items: center;
  margin-bottom: 60px;
}

.luxury-footer-text {
  max-width: 600px;
}

.luxury-footer-heading {
  font-size: 2.5rem;
  font-weight: 800;
  line-height: 1.1;
  letter-spacing: -0.02em;
  color: #ffffff;
  margin-bottom: 24px;
  background: linear-gradient(135deg, #ffffff 0%, #e0e0e0 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.luxury-footer-description {
  font-size: 1.1rem;
  line-height: 1.6;
  color: #b0b0b0;
  margin-bottom: 0;
  font-weight: 400;
}

.luxury-social-icons {
  display: flex;
  gap: 16px;
  flex-wrap: wrap;
  justify-content: flex-end;
}

.luxury-social-item {
  list-style: none;
  margin: 0;
}

.luxury-social-link {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 50px;
  height: 50px;
  background: linear-gradient(135deg, #ffffff 0%, #f0f0f0 100%);
  color: #1a1a1a;
  border-radius: 50%;
  text-decoration: none;
  transition: all 0.3s ease;
  box-shadow: 0 4px 15px rgba(0,0,0,0.1);
  position: relative;
  overflow: hidden;
}

.luxury-social-link::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #1a1a1a 0%, #333333 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
  border-radius: 50%;
}

.luxury-social-link:hover::before {
  opacity: 1;
}

.luxury-social-link:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 25px rgba(0,0,0,0.2);
  color: #ffffff;
}

.luxury-social-link svg {
  width: 20px;
  height: 20px;
  position: relative;
  z-index: 2;
  transition: color 0.3s ease;
}

.luxury-social-link:hover svg {
  color: #ffffff;
}

.luxury-copyright {
  background: linear-gradient(135deg, #000000 0%, #1a1a1a 100%);
  padding: 24px 20px;
  text-align: center;
  position: relative;
  border-top: 1px solid rgba(255,255,255,0.1);
}

.luxury-copyright-content {
  font-size: 0.9rem;
  font-weight: 500;
  color: #b0b0b0;
  margin: 0;
  line-height: 1.5;
}

.luxury-copyright-content a {
  color: #ffffff;
  text-decoration: none;
  transition: color 0.3s ease;
  border-bottom: 1px solid transparent;
}

.luxury-copyright-content a:hover {
  color: #ffffff;
  border-bottom-color: #ffffff;
}

/* Responsive Design */
@media (max-width: 768px) {
  .luxury-footer-container {
    padding: 60px 20px 30px 20px;
  }
  
  .luxury-footer-content {
    grid-template-columns: 1fr;
    gap: 40px;
    text-align: center;
  }
  
  .luxury-footer-heading {
    font-size: 2rem;
  }
  
  .luxury-footer-description {
    font-size: 1rem;
  }
  
  .luxury-social-icons {
    justify-content: center;
  }
  
  .luxury-copyright {
    padding: 20px 15px;
  }
}

@media (max-width: 480px) {
  .luxury-footer-container {
    padding: 40px 15px 20px 15px;
  }
  
  .luxury-footer-heading {
    font-size: 1.8rem;
  }
  
  .luxury-footer-description {
    font-size: 0.95rem;
  }
  
  .luxury-social-link {
    width: 45px;
    height: 45px;
  }
  
  .luxury-social-link svg {
    width: 18px;
    height: 18px;
  }
}

/* Animation for page load */
.luxury-footer-container {
  opacity: 0;
  transform: translateY(30px);
  animation: fadeInUp 0.8s ease forwards;
}

@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
</style>

{%- assign social_icons = false -%}

{%- if
  settings.social_twitter_link != blank
  or settings.social_facebook_link != blank
  or settings.social_pinterest_link != blank
  or settings.social_instagram_link != blank
  or settings.social_tumblr_link != blank
  or settings.social_snapchat_link != blank
  or settings.social_youtube_link != blank
  or settings.social_vimeo_link != blank
  or request.page_type == 'article'
  or request.page_type == 'blog'
-%}
  {%- assign social_icons = true -%}
{%- endif -%}

{%- assign socials = "Facebook Twitter Pinterest Instagram Tumblr Snapchat YouTube Vimeo" | split: ' ' -%}

<footer class="luxury-footer">
  <div class="luxury-footer-container">
    <div class="luxury-footer-content">
      {%- if section.settings.heading != blank and section.settings.discription != blank -%}
      <div class="luxury-footer-text">
        <h3 class="luxury-footer-heading">{{section.settings.heading}}</h3>
        <p class="luxury-footer-description">{{section.settings.discription}}</p>
      </div>
      {%- endif -%}

      {%- if social_icons -%}
      <div class="luxury-social-icons">
        {%- for social in socials -%}
          {%- assign social_link = social | prepend: 'social_' | append: '_link' | downcase -%}
          {%- assign icon_link = social | prepend: 'icon-' | downcase -%}
          {%- if settings[social_link] != blank -%}
            <li class="luxury-social-item">
              <a class="luxury-social-link" href="{{ settings[social_link] | escape }}" aria-describedby="a11y-external-message">
                {%- include icon_link -%}
                <span class="icon__fallback-text">{{ social }}</span>
              </a>
            </li>
          {%- endif -%}
        {%- endfor -%}
        
        <li class="luxury-social-item">
          <a class="luxury-social-link" href="mailto:slickharegrooming@gmail.com">
            <svg class="icon" xmlns="http://www.w3.org/2000/svg" id="Capa_1" enable-background="new 0 0 479.058 479.058" height="512" viewBox="0 0 479.058 479.058" width="512">
              <path d="m434.146 59.882h-389.234c-24.766 0-44.912 20.146-44.912 44.912v269.47c0 24.766 20.146 44.912 44.912 44.912h389.234c24.766 0 44.912-20.146 44.912-44.912v-269.47c0-24.766-20.146-44.912-44.912-44.912zm0 29.941c2.034 0 3.969.422 5.738 1.159l-200.355 173.649-200.356-173.649c1.769-.736 3.704-1.159 5.738-1.159zm0 299.411h-389.234c-8.26 0-14.971-6.71-14.971-14.971v-251.648l199.778 173.141c2.822 2.441 6.316 3.655 9.81 3.655s6.988-1.213 9.81-3.655l199.778-173.141v251.649c-.001 8.26-6.711 14.97-14.971 14.97z"/>
            </svg>
            <span class="icon__fallback-text">Email</span>
          </a>
        </li>
        
        {%- if request.page_type == 'blog' or request.page_type == 'article' -%}
          <li class="luxury-social-item">
            <a class="luxury-social-link" href="{{ shop.url }}{{ blog.url }}.atom">
              {% include 'icon-rss' %}
              <span class="icon__fallback-text">RSS</span>
            </a>
          </li>
        {%- endif -%}
      </div>
      {%- endif -%}
    </div>
  </div>
  
  <div class="luxury-copyright">
    <p class="luxury-copyright-content">{{section.settings.copyright}}</p>
  </div>
</footer>

