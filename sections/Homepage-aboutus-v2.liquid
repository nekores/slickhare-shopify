    margin-top: -16px;
}
  .image1 {
    padding-left: 16px;
}
  .contentWrapper p {
    color: rgba(51, 51, 51);
    font-size: 20px;
    line-height: 36px;
    margin: 0;
}
  .about-use-v2 .imageSection {
    /* margin-top: -40px; */
    width:30%;
}
