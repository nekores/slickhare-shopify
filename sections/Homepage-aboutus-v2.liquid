<style>
  .hompage-aboutus-v2 {
    {% if section.settings.colorID !=blank %}
    background:{{section.settings.colorID}};
    {% else %}
   background:white;
    {% endif %}
    {% if section.settings.sectionImage !=blank %}
     background-image:url("{{ section.settings.sectionImage |img_url:'master' }}"); 
     background-repeat:no-repeat;
     background-size:cover;
     background-position:center center;
    {% endif %}
    {% if section.settings.logo_aligment == "ON" %}
    z-index:-1;
    {% endif %}
      
    padding-bottom:80px;
    position:relative;
  
}
  {% if section.settings.logo_aligment == "ON" %}
  .hompage-aboutus-v2:before{
        content: "";
    width: 100%;
    {% if section.settings.overlay !=blank %}
    background-color:{{ section.settings.overlay }};
    {% endif %}
    height: 100%;
    position: absolute;
    top: 0;
    z-index:-1;
    opacity: 0.4;
  }
 {% endif %}
  
  img.image_fluid {
    width: 100%;
    height: 100%;
}
  .imageSection {
    position: relative;
}
  
  .hompage-aboutus-v2 .mainContainer {
    display: flex;
    justify-content: center;
   margin: 0px auto; 
    max-width:1500px;
}
.hompage-aboutus-v2 .contentSection {
    padding: 0px 70px;
    
    padding-left:0px;
    flex-basis:50%;
    padding-right:0;
}
.hompage-aboutus-v2 .contentSection h3{
    font-size: 40px;
    font-weight: 800;
    line-height: 36px;
    color: rgba(51, 51, 51, 1);
    letter-spacing: 0.03em;
    text-align: left;
    margin-bottom: 20px;
}

  .readMorebtn {
  background: #000000;
  width: auto;
  color: white;
  padding: 11px 50px;
  font-size:16px;
  font-weight: 700;
  line-height: 31px;
  letter-spacing: 0em;
  text-align: left;

}
  .btnWrapper-about-v2 {
   
    margin-top: 30px;
    position: relative;
}
    .hompage-aboutus-v2 .image1 img.image_fluid {
    width:100%;
    max-width:450px;
}
  .image1 img.image_fluid {
    width:60%;
}
    .image2 img.image_fluid {
    width:80% !important;
}
.contentWrapper {
    padding: 40px;
    border: 4px solid rgba(214, 180, 98, 0.95);
    padding-right: 118px;
}
.image2 {
