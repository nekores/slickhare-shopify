}
</style>
<div class="mainContainer about-use-v2"> 

      <div class="contentSection">
        <div class="contentWrapper">
          {% if section.settings.sectionHeading !=blank %}
       <h3 class="sectionHeading">  
         {{ section.settings.sectionHeading }}
       </h3>
        {% endif %} 
      {% if section.settings.sectiondescription !=blank %}
       <p>
        {{ section.settings.sectiondescription }}
       </p>
        {% endif %}
        {% if section.settings.btntitle !=blank %}
 <div class="btnWrapper-about-v2">
    <a href="{{ section.settings.btnUrl}}"class="readMorebtn">{{ section.settings.btntitle }}</a>
 </div>
          {% endif %}
        </div>
        
      </div>
       <div class="imageSection aboutsectionImage"> 
         {% if section.settings.Image1 !=blank %}
         <div class="image1"> 
                <img class="image_fluid" src="{{ section.settings.Image1|img_url:'master' }}"/>
         
         </div>
           {% endif %}
              {% if section.settings.Image2 !=blank %}
          <div class="image2">
                   <img class="image_fluid" src="{{ section.settings.Image2|img_url:'master' }}"/>
          </div>
           {% endif %}
         
       
       </div>


 </div>


