
<style>
/*   url(//cdn.shopify.com/s/files/1/0335/6327/9404/products/IMG_0734.jpg?v=1663709474) */
.featured-product-v2 {
      background-image:url("{{section.settings.bgImage |img_url:'master'}}") ;
    background-size: cover;
    background-position: center center;
   padding-top: 100px;
    padding-bottom: 100px !important;
    background-repeat: no-repeat;
    padding-left: 50px;
    padding-right: 50px;
    background-blend-mode: overlay;
    background-color:{{section.settings.colorID}};
}
  
  .featured-product-v2 .feature-row{
    justify-content:center;
    
  }
  .featured-product-v2 .featured-row__subtext p{
    text-align: center;
  font-size: 20px;
font-weight: 500;
line-height: 31px;
letter-spacing: 0.03em;
text-align: center;
color:#FFFFFF;
}

  .featured-product-v2 .feature-row h2.h3 {

font-size:50px;
font-weight: 600;
line-height: 94px;
letter-spacing: 0.03em;
text-align: center;
color:#FFFFFF;
padding:1rem 0;
    margin:0;

}
  div#shopify-section-image-with-text-product-2 {
    padding: 0;
}
   @media only screen and (max-width: 750px) {
  .feature-row h2.h3 {
    font-size: 2.6rem;
}
   }
</style>

<div class="page-width">
  <div class="feature-row" style="justify-content:center">
   <div class="contentWrapper">
     {%- assign product = all_products[section.settings.product] -%}
 
      {% if section.settings.sectionHeading != blank %}
        
        <h2 class="h3">{{ section.settings.sectionHeading }}</h2>
      {% endif %}
      {% if section.settings.sectionDescripton != blank %}
        <div class="rte rte-setting featured-row__subtext">{{ section.settings.sectionDescripton }}</div>
      {% endif %}
   

    <div class="text-center" style="padding-bottom:40px">
    {% if section.settings.btntitle !=blank %}
      
      <div class="product-form__item product-form__item--submit">
                <a href="{{ section.settings.btnUrl }}" class="btn product-form__cart-submit" style="width:fit-content;margin:0px auto">
                  <span>
             
                {{ section.settings.btntitle }}
      
                   </span>
                 
                </a>
                
              </div>
      {% endif %}
      
    </div>

      
    </div>

  </div>
</div>


{% schema %}
{
  "name": {
    
    "en": "Featured Product V2"
  },
  "class": "index-section featured-product-v2",
  "settings": [
       {
      "type": "text",
      "id": "sectionHeading",
      "label":"Heading",
      "default": "Heading"
    },
    {
      "type": "richtext",
      "id": "sectionDescripton",
      "label":"Section Description"
     
    },
      {
      "type": "product",
      "id": "product",
      "label": "Product"
    },
      {
      "type": "text",
      "id": "btntitle",
      "label": "Button Label"
    },
    {
        "type": "url",
        "id": "btnUrl",
        "label": "Button Link"
        
      },
      {
        "type": "image_picker",
        "id": "bgImage",
        "label": "Select Background Image"
   
      },
    {
        "type": "color",
        "id": "colorID",
        "label": "Select Background Overlay",
        "default": "#000000"
      
        
      }
    
  
  ],
  "presets": [
    {
      "name": {
       
        "en": "Featured Product V2"
      
      },
      "category": {
       
        "en": "collection"
       
      }
    }
  ]
}
{% endschema %}

