<style>
   .section-{{ section.id }}-padding{
    padding-top: calc({{ section.settings.padding_top }}px * 0.75);
    padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
      background:{{ section.settings.text_color}};
   }

    section.page-heading_section h1{
      font-size: 3rem;
      line-height: 1.1;
      text-transform: uppercase !important;
      font-weight: 800 !important;
      color:{{ section.settings.heading_color}};
      padding-bottom:0px;
      text-align:{{ section.settings.text_alignment}};
      margin-bottom:0;
    }

    @media screen and (max-width: 750px) {
       .page-heading_section h1{
         font-size:34px;
         line-height:42px;
       }
    }
  
</style>

<section  class="page-heading_section section-{{ section.id }}-padding">
   <div class="page-width">
       <h1>{{  section.settings.heading }}</h1>
   </div>
</section>
{% schema %}
  {
    "name": "Page Header",
    "settings": [
      {
        "type":"text",
        "id":"heading",
        "label":"Heading",
        "default":"Services"
      },
      {
          "type": "select",
          "id": "text_alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "center",
          "label": "Heading alignment"
        },
      {
        "type":"color",
        "id":"heading_color",
        "label":"Section Background",
        "default":"#000"
      },
      {
        "type":"color",
        "id":"text_color",
        "label":"Section Background",
        "default":"#f3f3f3"
      },
       {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default":32
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default":32
    }
    ],
    "presets": [
      {
        "name":"Page Header" 
      }
    ]
  }
{% endschema %}